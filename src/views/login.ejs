<%- include('includes/Header.ejs') %>
<%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Criar conta ou Login</h1>
      <p class="text-center lead">faça seu login ou crie uma conta</p>

      <%- include('includes/messages.ejs') %>

      <div class="row my-5">
        <div class="col-lg">
          <h4>Faça seu Cadastro</h4>
          <p>Se não possuir conta faça o formulário abaixo:</p>

          <form class="form-cadastro" action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu E-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3 w-100 text-center">Cadastrar</button>
          </form>
        </div>
        
        <div class="col-lg">
          <h4>Faça seu Login</h4>
          <p>Se já possui conta faça o formulário abaixo:</p>

          <form class="form-login" action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu E-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3 w-100 text-center">Entrar</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/Footer.ejs') %>